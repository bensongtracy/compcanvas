{
  "manifest_version": 3,
  "name": "Competitive Canvas Tracker",
  "version": "1.0",
  "description": "Track study XP and streaks directly in Canvas!",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
